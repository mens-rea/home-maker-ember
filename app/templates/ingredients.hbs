<div class="row mb-5">
  <div class="col-md-12">
    <h2>Ingredients</h2>
    <button type="button" class="btn btn-primary float-right" onclick={{action "showModalWithForm"}}>Add Ingredient</button>
  </div>
</div>

<div class="row">
  {{#each @model as |ingredient|}}
    <div class="col-md-4 mb-3">
      <Row @model={{ingredient}} @type="ingredient" @showModalWithForm={{showModalWithForm}}/>
    </div>
  {{/each}}
</div>

