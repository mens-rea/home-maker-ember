<div class="row mb-5">
  <div class="col-md-12">
    <h2>Bills</h2>
    <LinkTo @route="reports.bills"><button type="button" class="btn btn-success float-right ml-2">Monthly Report</button></LinkTo>
    <button type="button" class="btn btn-primary float-right" onclick={{action "showModalWithForm"}}>Add Bill</button>
  </div>
</div>

<div class="row">
  {{#each @model as |bill|}}
    <div class="col-md-4 mb-3">
      <Card @model={{bill}} @type="bill" @isBill={{true}} @showModalWithForm={{showModalWithForm}}/>
    </div>
  {{/each}}
</div>

{{outlet}}