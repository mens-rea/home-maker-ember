<div class="row mb-5">
  <div class="col-md-12">
    <h2>Reports - Bills</h2>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Date Paid</th>
      <th scope="col">Amount</th>
    </tr>
  </thead>
  <tbody>
    {{#each @model as |bill|}}
      <tr>
        <td>{{bill.title}}</td>
        <td>
          {{#if bill.isPaid}}
            {{moment-format bill.datePaid 'MMM D YYYY'}}
          {{else}}
            NA
          {{/if}}
        </td>
        <td>P {{bill.amount}}</td>
      </tr>
    {{/each}}
    <tr class="table-info">
      <td><b>Total</b></td>
      <td></td>
      <td>P {{totalBills}}</td>
    </tr>
  </tbody>
</table>

{{outlet}}