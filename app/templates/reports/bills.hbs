<div class="row mb-5">
  <div class="col-md-12">
    <h2>Report - Bills</h2>
    <div class="form-check float-left">
      <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" onClick={{action "toggleUnpaid"}} checked={{this.isUnpaidShown}}>
      <label class="form-check-label" for="defaultCheck1">
        Show unpaid
      </label>
    </div>
    <button type="button" class="btn btn-success float-right" onclick={{action "printReport"}}>Print Report</button>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Date Paid</th>
      <th scope="col">Amount</th>
    </tr>
  </thead>
  <tbody>
    {{#each @model as |bill|}}
      {{#if bill.isPaid}}
        <tr>
          <td>{{bill.title}}</td>
          <td>
            {{moment-format bill.datePaid 'MMM D YYYY'}}
          </td>
          <td>P {{bill.amount}}</td>
        </tr>
      {{else if this.isUnpaidShown}}
        <tr>
          <td>{{bill.title}}</td>
          <td>
            {{moment-format bill.datePaid 'MMM D YYYY'}}
          </td>
          <td>P {{bill.amount}}</td>
        </tr>
      {{/if}}
    {{/each}}
    <tr class="table-info">
      <td><b>Total</b></td>
      <td></td>
      <td>P {{totalBills}}</td>
    </tr>
  </tbody>
</table>

{{outlet}}