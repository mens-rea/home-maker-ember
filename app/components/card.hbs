<div class="card">
  {{!-- {{#if @img}}
    <img class="card-img-top" src="..." alt="Card image cap">
  {{else}}
    <img class="card-img-top" src="https://loremflickr.com/cache/resized/65535_50627945193_8d481f8aff_n_320_240_g.jpg" alt={{@title}}>
  {{/if}} --}}
  <div class="card-body">
    <LinkTo @route="recipe" @model={{@recipe.id}}><h5 class="card-title">{{@recipe.title}}</h5></LinkTo>
    <p class="card-text">{{@recipe.description}}</p>
  </div>
  <div class="card-footer">
    <button type="button" class="btn btn-danger float-right" onclick={{action "deleteRecipe" @recipe.id}}><FaIcon @icon="times" /></button>
    <button type="button" class="btn btn-success float-right mr-2" onclick={{action "deleteRecipe" @recipe.id}}><FaIcon @icon="plus" /></button>
  </div>
</div>